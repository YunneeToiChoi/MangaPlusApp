<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:id="@+id/menuDrawer_container"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:elevation="100dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/containerDrawerUser"
        android:layout_width="150dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/imgUserDrawer"
            app:cardCornerRadius="120dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="10dp"
            android:translationZ="5dp">
            <ImageView
                android:id="@+id/menu_drawer_header_image_user"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/avatar"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imgUserDrawer"
            android:layout_gravity="center"
            android:id="@+id/menu_drawer_header_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textSize="25sp"
            android:fontFamily="@font/ubuntu_regular"/>

    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_below="@id/containerDrawerUser"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
</LinearLayout>
