<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/Background_dialog_nav"
        android:background="@drawable/background_dialog_navleft"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/Name_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite"
            android:textSize="45sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:letterSpacing="0.025"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/square_peg"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/Closed_dialog"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/white"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_closed"/>
        <androidx.cardview.widget.CardView
            android:layout_below="@+id/Name_Title"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="4dp"
            android:translationZ="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#37000000"/>
        </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:paddingTop="20dp"
            android:layout_below="@+id/Name_Title"
            android:id="@+id/dashFragmentRcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</RelativeLayout>