<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.VerificationFragment">
    <ScrollView
        android:id="@+id/OverlayOTP"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:layout_marginTop="30dp"
                android:id="@+id/forgot_Banner">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/background_otp">
                </ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/toolbarOTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/backOTPBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/transparent"
                    android:padding="5dp"
                    android:src="@drawable/ic_back_black"
                    tools:ignore="TouchTargetSizeCheck">
                </ImageButton>
                <TextView
                    android:id="@+id/HeadTiltleOTP"
                    android:layout_below="@+id/backOTPBtn"
                    android:layout_marginTop="290dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Vertification"
                    android:fontFamily="@font/stylishregular"
                    android:textAppearance="@style/registration"
                    android:layout_centerHorizontal="true">
                </TextView>
                <TextView
                    android:id="@+id/requestOTPEmail"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/HeadTiltleOTP"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:text="@string/RecommnedOTP"
                    android:textAppearance="@style/RecommendRes"
                    android:fontFamily="@font/ubuntubold"
                    android:lineSpacingExtra="4dp"
                    android:textSize="19sp"
                    android:gravity="center_horizontal|center_vertical">
                </TextView>
                <TextView
                    android:id="@+id/forgot_EmailUserTxt"
                    android:layout_below="@+id/requestOTPEmail"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ubuntubold"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/testDemo"
                    android:textStyle="bold"
                    android:textSize="17sp">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/toolbarOTP"
                android:layout_width="match_parent"
                android:padding="20dp"

                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/forgotInputOtp_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/otp1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="10dp"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:maxLength="1"
                        android:fontFamily="@font/inter"
                        android:textSize="30sp"
                        android:background="@drawable/bg_otp">
                    </EditText>

                    <EditText
                        android:id="@+id/otp2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_otp"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:fontFamily="@font/inter"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textStyle="bold">

                    </EditText>

                    <EditText
                        android:id="@+id/otp3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_otp"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:fontFamily="@font/inter"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textStyle="bold">

                    </EditText>

                    <EditText
                        android:id="@+id/otp4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_otp"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:fontFamily="@font/inter"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textStyle="bold">

                    </EditText>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/forgotInputOtp_box"
                    android:layout_marginBottom="40dp">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/sendOtp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_defalt"
                        android:fontFamily="@font/interextrabold"
                        android:text="@string/Continue"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>
                    <LinearLayout
                        android:layout_below="@+id/sendOtp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/RecommendRes"
                            android:text="Re-send code in"
                            android:fontFamily="@font/ubuntubold"
                            android:letterSpacing="0.0015"
                            android:layout_marginRight="5dp">
                        </TextView>
                        <TextView
                            android:id="@+id/reSendOtpTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="@font/ubuntubold"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:text="running. . .">
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>