<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/forgot_Banner"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/verified_banner">
        </ImageView>
        <LinearLayout
            android:id="@+id/forgotInputOtp_box"
            android:layout_below="@+id/forgot_Banner"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/forgot_emailTittle"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/VerificationNotify"
                android:textSize="18sp">
            </TextView>
            <TextView
                android:id="@+id/forgot_EmailUserTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/testDemo"
                android:textStyle="bold"
                android:textSize="18sp">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/otp1"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:maxLength="1"
                    >
                </EditText>
                <EditText
                    android:id="@+id/otp2"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:maxLength="1">
                </EditText>
                <EditText
                    android:id="@+id/otp3"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:maxLength="1">
                </EditText>
                <EditText
                    android:id="@+id/otp4"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:maxLength="1">
                </EditText>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#950000"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Didn't receive the OTP? Resend OTP ">
            </TextView>
            <Button
                android:id="@+id/sendOtp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:backgroundTint="@color/forgot_primary"
                android:hint="@string/sendOtp">
            </Button>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>