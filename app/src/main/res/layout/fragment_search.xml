<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="80dp"
    android:paddingHorizontal="10dp"
    tools:context=".Fragment.SearchFragment">
    <LinearLayout
        android:id="@+id/OverlaySearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/inputManga"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/shape_button02"
            android:backgroundTint="#82BDBDB5"
            android:hint="@string/searchKeyWord"
            android:singleLine="true"
            android:textColorHint="#C3662D"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_search_foreground">
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Category"
            android:textSize="16sp"
            android:textColor="#D10000"
            android:fontFamily="@font/ubuntubold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchFmRcvCate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Manga"
            android:textSize="16sp"
            android:textColor="#D10000"
            android:fontFamily="@font/ubuntubold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:paddingBottom="80dp"
            android:id="@+id/searchFmRcv"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="27dp"
            android:paddingEnd="10dp"/>
    </LinearLayout>
</RelativeLayout>