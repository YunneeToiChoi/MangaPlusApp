<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ForgotFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:id="@+id/ForgotImage">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/forgot_background">
                </ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ToolbarForgot">
                <ImageButton
                    android:id="@+id/backForgotBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/transparent"
                    android:padding="5dp"
                    android:src="@drawable/ic_back_black"
                    tools:ignore="TouchTargetSizeCheck">
                </ImageButton>
                <TextView
                    android:id="@+id/HeadTiltleForgot"
                    android:layout_below="@+id/backForgotBtn"
                    android:layout_marginTop="300dp"
                    android:layout_width="wrap_content"
                    android:letterSpacing="0.015"
                    android:layout_height="wrap_content"
                    android:text="@string/forgotPassword"
                    android:fontFamily="@font/stylishregular"
                    android:textAppearance="@style/registration"
                    android:layout_centerHorizontal="true">
                </TextView>
                <TextView
                    android:id="@+id/requestResEmail"
                    android:layout_below="@+id/HeadTiltleForgot"
                    android:layout_width="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:text="@string/RecommendForgot"
                    android:textAppearance="@style/RecommendRes"
                    android:fontFamily="@font/ubuntubold"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center_vertical">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/ToolbarForgot"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/forgotInputEmail_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ForgotEmail_act"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:endIconMode="clear_text"
                        app:hintEnabled="false">
                        <EditText
                            android:id="@+id/forgotEmailUser_Input"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:drawableStart="@drawable/ic_email"
                            android:drawablePadding="20dp"
                            android:textSize="20sp"
                            android:hint="@string/forgotEnterEmail"
                            android:fontFamily="@font/inter"
                            android:background="@drawable/input_grayblur"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/text_login_input">
                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnForgotSendOtp"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/forgotInputEmail_box"
                    android:background="@drawable/btn_accept"
                    android:fontFamily="@font/interextrabold"
                    android:text="@string/sendOtp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>