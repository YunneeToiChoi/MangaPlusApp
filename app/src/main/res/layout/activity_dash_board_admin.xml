<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    tools:context=".Activity.Admin.DashBoardAdminActivity">
    <!--Label DashBoard-->
    <RelativeLayout
        android:id="@+id/toolbarAdmin"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar01">
        <TextView
            android:id="@+id/toolBarAdminTittle"
            android:text="@string/dashBoardAdmin"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/subToolBarAdminTittle"
            android:layout_below="@+id/toolBarAdminTittle"
            android:text="abc@example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@color/gray1">
        </TextView>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/power_off_24px"
            android:background="@color/transparent"
            android:layout_marginEnd="5dp"
            android:padding="20dp"
            android:layout_centerVertical="true">
        </ImageButton>
    </RelativeLayout>
    <!--Search Categories-->
    <EditText
        android:id="@+id/adminDashSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@+id/toolbarAdmin"
        android:hint="@string/Search"
        android:drawableEnd="@drawable/ic_search_foreground"
        android:drawableTint="@color/black"/>
    <!--Show Categories-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adminRcvContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomDashBoardUser"
        android:layout_below="@+id/adminDashSearch"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp" />
    <!--Add Category & Manga-->
    <LinearLayout
        android:id="@+id/bottomDashBoardUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <!--  ADD CATEGORY  -->
        <Button
            android:id="@+id/adminAddCate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button02"
            android:text="@string/addCategory"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:minHeight="50dp"
            android:textAllCaps="false">
        </Button>
        <!-- ADD MANGA -->
        <Button
            android:id="@+id/adminAddManga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button02"
            android:text="@string/addManga"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:minHeight="50dp"
            android:textAllCaps="false">
        </Button>
        <!--    Add PDF    -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addChapter"
            android:tint="@color/white"
            app:fabCustomSize="50dp"
            android:src="@drawable/pdf_24px">
        </com.google.android.material.floatingactionbutton.FloatingActionButton>
    </LinearLayout>
</RelativeLayout>