<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.UserProfileFragment"
    android:background="@color/white">
    <ImageView
        android:rotation="180"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/forgot_layer_list"
        android:layout_alignParentBottom="true">
    </ImageView>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/TopProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp">
            <ImageView
                android:id="@+id/background_profile"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/shape_profile">
            </ImageView>
            <RelativeLayout
                android:id="@+id/avatar_edit"
                android:layout_centerHorizontal="true"
                android:layout_width="140dp"
                android:layout_marginTop="-100dp"
                android:layout_height="140dp"
                android:layout_below="@id/background_profile">
                <androidx.cardview.widget.CardView
                    android:id="@+id/Avatar_Profile_Card"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10000dp"
                    android:background="@drawable/shape_circle"
                    android:elevation="10dp"
                    android:translationZ="5dp">
                    <ImageView
                        android:id="@+id/Avatar_Profile_Image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/avatar"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:elevation="30dp"
                android:translationZ="20dp"
                android:layout_marginStart="-45dp"
                android:layout_marginTop="-20dp"
                android:layout_below="@id/background_profile"
                android:layout_toRightOf="@id/avatar_edit"
                android:src="@drawable/pen_edit_avt">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/TopProfile"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/userName_Tittle"
                android:fontFamily="@font/interextrabold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:layout_below="@+id/userName_Tittle"
                android:layout_centerHorizontal="true"
                android:id="@+id/userName_Email"
                android:fontFamily="@font/intersemibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="#78000000"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"/>
            <LinearLayout
                android:id="@+id/icon_connect"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/userName_Email"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    app:tint="@color/login_color"
                    android:src="@drawable/facebooks">
                </ImageView>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:tint="@color/btn_login"
                    android:src="@drawable/googles">
                </ImageView>
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    app:tint="#2D81CA"
                    android:src="@drawable/zalo">
                </ImageView>
            </LinearLayout>
            <RelativeLayout
                android:layout_below="@+id/icon_connect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:background="@drawable/box_info">
                    <LinearLayout
                        android:id="@+id/UserName_Profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:padding="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/userName"
                            android:fontFamily="@font/interextrabold"
                            android:textStyle="italic"
                            android:textSize="15sp"
                            android:paddingRight="10dp"
                            android:textColor="#6D101010"
                            android:letterSpacing="0.015"/>
                        <TextView
                            android:id="@+id/userName_info"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="Name"
                            android:fontFamily="@font/interextrabold"
                            android:layout_height="wrap_content"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/UserName_Profile"
                        android:id="@+id/Email_Profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/interextrabold"
                            android:text="@string/email"
                            android:textColor="#6D101010"
                            android:textSize="15dp"
                            android:textStyle="italic"
                            android:letterSpacing="0.15"/>
                        <TextView
                            android:id="@+id/userEmail_info"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:ellipsize="marquee"
                            android:scrollbars="vertical"
                            android:singleLine="true"
                            android:text="Mail"
                            android:fontFamily="@font/interextrabold"
                            android:layout_height="wrap_content"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/Email_Profile"
                        android:id="@+id/Password_Profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/interextrabold"
                            android:text="@string/passWord"
                            android:textColor="#6D101010"
                            android:paddingRight="10dp"
                            android:textSize="15dp"
                            android:textStyle="italic"
                            android:letterSpacing="0.15"/>

                        <TextView
                            android:layout_marginTop="-30dp"
                            android:id="@+id/userPassword_info"
                            android:layout_width="match_parent"
                            android:text=".........."
                            android:fontFamily="@font/interextrabold"
                            android:layout_height="wrap_content"
                            android:textSize="50sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
</ScrollView>
    <!-- TODO: Update blank fragment layout -->
</RelativeLayout>