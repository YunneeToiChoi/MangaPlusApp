<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.UserProfileFragment"
    android:background="#FCEEE4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_below="@+id/TopProfile"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/TopProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="20dp">
                    <RelativeLayout
                        android:elevation="100dp"
                        android:id="@+id/avatar_edit"
                        android:layout_centerHorizontal="true"
                        android:layout_width="120dp"
                        android:layout_marginTop="50dp"
                        android:layout_height="120dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/Avatar_Profile_Card"
                            android:layout_centerHorizontal="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="200dp"
                            android:elevation="10dp"
                            android:translationZ="5dp">
                            <ImageView
                                android:id="@+id/Avatar_Profile_Image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/avatar"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:elevation="300dp"
                        android:translationZ="20dp"
                        android:layout_marginStart="-45dp"
                        android:layout_marginTop="-50dp"
                        android:layout_below="@id/avatar_edit"
                        android:layout_toRightOf="@id/avatar_edit"
                        android:src="@drawable/pen_edit_avt">
                    </ImageView>
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="170dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/userName_Tittle"
                    android:fontFamily="@font/interextrabold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_below="@+id/userName_Tittle"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/userName_Email"
                    android:fontFamily="@font/intersemibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="#78000000"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"/>
                <LinearLayout
                    android:id="@+id/icon_connect"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/userName_Email"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:tint="@color/login_color"
                            android:src="@drawable/facebooks">
                        </ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            app:tint="@color/btn_login"
                            android:src="@drawable/googles">
                        </ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_weight="1"
                            app:tint="#2D81CA"
                            android:src="@drawable/zalo">
                        </ImageView>
                    </LinearLayout>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_below="@+id/icon_connect"
                    android:elevation="100dp"
                    android:layout_marginTop="20dp"
                    android:translationZ="5dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_marginStart="20dp"
                        android:paddingBottom="20dp">
                        <ImageView
                            android:id="@+id/Tab_showdialog"
                            app:tint="#6F000000"
                            android:layout_alignParentTop="true"
                            android:padding="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/editing">
                        </ImageView>
                        <LinearLayout
                            android:layout_alignParentTop="true"
                            android:id="@+id/UserName_Profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:padding="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/userName"
                                android:fontFamily="@font/interextrabold"
                                android:textSize="15sp"
                                android:paddingRight="10dp"
                                android:textColor="#6D101010" />
                            <TextView
                                android:id="@+id/userName_info"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:text="Name"
                                android:fontFamily="@font/interextrabold"
                                android:layout_height="wrap_content"
                                android:textSize="16sp" />
                        </LinearLayout>
                        <View
                            android:layout_below="@+id/UserName_Profile"
                            android:background="#1A000000"
                            android:layout_marginEnd="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="2dp">
                        </View>
                        <LinearLayout
                            android:layout_below="@+id/UserName_Profile"
                            android:id="@+id/Email_Profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/interextrabold"
                                android:text="@string/email"
                                android:textColor="#6D101010"
                                android:textSize="15dp" />
                            <TextView
                                android:id="@+id/userEmail_info"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:ellipsize="marquee"
                                android:scrollbars="horizontal"
                                android:singleLine="true"
                                android:text="Mail"
                                android:fontFamily="@font/interextrabold"
                                android:layout_height="wrap_content"
                                android:textSize="16sp" />
                        </LinearLayout>
                        <View
                            android:layout_below="@+id/Email_Profile"
                            android:background="#1A000000"
                            android:layout_marginEnd="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="2dp">
                        </View>
                        <LinearLayout
                            android:layout_below="@+id/Email_Profile"
                            android:layout_alignParentBottom="true"
                            android:id="@+id/Password_Profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/interextrabold"
                                android:text="@string/passWord"
                                android:textColor="#6D101010"
                                android:paddingRight="10dp"
                                android:textSize="15dp" />
                            <TextView
                                android:layout_marginTop="-30dp"
                                android:id="@+id/userPassword_info"
                                android:layout_width="match_parent"
                                android:text=".........."
                                android:fontFamily="@font/interextrabold"
                                android:layout_height="wrap_content"
                                android:textSize="50sp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
    <!-- TODO: Update blank fragment layout -->
</RelativeLayout>