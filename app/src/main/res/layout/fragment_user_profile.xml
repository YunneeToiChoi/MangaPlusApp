<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileFragment"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
       android:background="@drawable/shape_profile">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_test"
            android:layout_marginTop="15dp"
            >
        </ImageView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="23dp"
            android:textStyle="bold"
            android:layout_marginTop="-7dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="205dp"
        android:background="@drawable/profile_white_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:padding="8dp"
                       android:layout_marginLeft="32dp">
                       <TextView
                           android:layout_width="80dp"
                           android:layout_height="50dp"
                           android:text="27"
                           android:textSize="28dp"
                           android:textAlignment="center"
                           android:textStyle="bold"/>
                       <TextView
                           android:layout_width="80dp"
                           android:layout_height="match_parent"
                           android:text="Post"
                           android:textSize="18dp"
                           android:textAlignment="center" />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:padding="8dp"
                       android:elevation="5dp">
                       <TextView
                           android:layout_width="80dp"
                           android:layout_height="50dp"
                           android:text="45"
                           android:textSize="28dp"
                           android:textAlignment="center"
                           android:textStyle="bold"/>
                       <TextView
                           android:layout_width="80dp"
                           android:layout_height="match_parent"
                           android:text="Post"
                           android:textSize="18dp"
                           android:textAlignment="center" />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:padding="8dp"
                       android:elevation="5dp">
                       <TextView
                           android:layout_width="80dp"
                           android:layout_height="50dp"
                           android:text="56"
                           android:textSize="28dp"
                           android:textAlignment="center"
                           android:textStyle="bold"/>
                       <TextView
                           android:layout_width="80dp"
                           android:layout_height="match_parent"
                           android:text="Post"
                           android:textSize="18dp"
                           android:textAlignment="center" />
                   </LinearLayout>
               </LinearLayout>
           </RelativeLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="80dp">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_weight="1"
                  android:elevation="5dp">
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="20dp"
                  android:layout_margin="15dp">
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:textStyle="bold"
                      android:textSize="23dp"
                      android:text="Email"/>
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="20dp"
                      android:text="email"
                      android:textAlignment="viewEnd"/>
              </LinearLayout>
              <androidx.appcompat.widget.AppCompatImageView
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:alpha="0.5"
                  android:background="@color/pinkPastel_background" />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="20dp"
                  android:layout_margin="15dp">
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:text="Username"
                      android:textSize="23dp"
                      android:textStyle="bold"/>
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="20dp"
                      android:text="username"
                      android:textAlignment="viewEnd"/>
              </LinearLayout>
              <androidx.appcompat.widget.AppCompatImageView
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:alpha="0.5"
                  android:background="@color/pinkPastel_background" />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="20dp"
                 android:layout_margin="15dp"
                  android:layout_marginRight="15dp">
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:textStyle="bold"
                      android:textSize="23dp"
                      android:text="Pasword"/>
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="20dp"
                      android:text="password"
                      android:textAlignment="viewEnd"/>
              </LinearLayout>
              </LinearLayout>

          </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/navToEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pinkPastel_background"
        android:hint="navToEdit"
        android:layout_alignParentBottom="true"
        android:textSize="20dp"
        android:padding="23dp"
        android:layout_margin="35dp">
    </Button>
</RelativeLayout>