<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/background_home"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">
    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_fm_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Popular"
                android:layout_marginTop="90dp"
                android:text="@string/Popular"
                android:textSize="24sp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/jost_extrabold"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.appbar.AppBarLayout
                android:layout_below="@+id/Popular"
                android:layout_marginTop="8dp"
                android:id="@+id/imgslider_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:fitsSystemWindows="true"
                android:theme="@style/Theme.MangaPlusApp">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/imgslider_container_collapsing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:titleEnabled="false"
                    app:contentScrim="@color/transparent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vp2_image_slider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="20dp"
                        android:paddingStart="80dp"
                        android:paddingEnd="80dp"
                        app:layout_collapseMode="parallax"/>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@+id/imgslider_container"
                android:paddingBottom="60dp"
                android:id="@+id/rcv_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>