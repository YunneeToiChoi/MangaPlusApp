<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.User.MainActivity">
    <ScrollView
        android:id="@+id/OverlayEditEmail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/ToolBarCP"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="fitCenter"
                android:src="@drawable/backgroung_edit_email"
                android:layout_centerHorizontal="true">
            </ImageView>
            <ImageButton
                android:id="@+id/backEditEmailBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:src="@drawable/ic_back_black"
                tools:ignore="TouchTargetSizeCheck">
            </ImageButton>
            <TextView
                android:id="@+id/HeadTiltleChangeEmail"
                android:layout_below="@+id/backEditEmailBtn"
                android:layout_marginTop="300dp"
                android:layout_width="wrap_content"
                android:letterSpacing="0.015"
                android:layout_height="wrap_content"
                android:text="@string/EditEmail"
                android:fontFamily="@font/stylishregular"
                android:textAppearance="@style/registration"
                android:layout_centerHorizontal="true">
            </TextView>
            <TextView
                android:id="@+id/requestResEmail"
                android:layout_below="@+id/HeadTiltleChangeEmail"
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:text="@string/RecommendForgot"
                android:textAppearance="@style/RecommendRes"
                android:fontFamily="@font/ubuntubold"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal|center_vertical">
            </TextView>
            <RelativeLayout
                android:id="@+id/userInputInfo_layout"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/requestResEmail">
                <RelativeLayout
                    android:id="@+id/InputUserNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/EditUserName_act"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        app:endIconMode="clear_text"
                        android:layout_marginBottom="20dp"
                        android:textColorHint="@color/gray">
                        <EditText
                            android:id="@+id/userNewNameTxt"
                            android:drawableStart="@drawable/ic_personal"
                            android:drawablePadding="10dp"
                            android:layout_width="match_parent"
                            android:hint="@string/EnterNewEmail"
                            android:fontFamily="@font/inter"
                            android:inputType="textEmailAddress"
                            android:background="@drawable/input_grayblur"
                            android:layout_height="wrap_content">
                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnchangeNewEmail"
                    android:layout_below="@+id/InputUserNameEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FD4D73"
                    android:background="@drawable/btn_accept"
                    android:fontFamily="@font/interextrabold"
                    android:text="@string/Apply"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginBottom="30dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>