<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePasswordFragment">
    <LinearLayout
        android:id="@+id/userInputInfo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/userNewNameTxt"
            android:layout_width="match_parent"
            android:hint="Input name"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:id="@+id/userNewPasswordTxt"
            android:layout_width="match_parent"
            android:hint="Input password"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:id="@+id/userRePasswordTxt"
            android:layout_width="match_parent"
            android:hint="Input Re password"
            android:layout_height="wrap_content">
        </EditText>
        <Button
            android:id="@+id/btnSubmitInfo"
            android:layout_width="match_parent"
            android:hint="@string/submit"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>


</FrameLayout>