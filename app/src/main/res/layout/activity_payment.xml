<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#E3EBF8"
    tools:context=".Activity.User.PaymentStripeActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@drawable/background_payment_buy">
    </ImageView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/NameMangaPlus"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manga_plus_home"
                android:textSize="75sp"
                android:textColor="#6A4FB1"
                android:textStyle="bold"
                android:fontFamily="@font/square_peg"
                android:layout_gravity="center"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/NameMangaPlus"
                android:id="@+id/UserName"
                android:textSize="20sp"
                android:text="NameUser"
                android:fontFamily="@font/intersemibold"
                android:textColor="#68000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <androidx.cardview.widget.CardView
                android:layout_below="@+id/UserName"
                android:id="@+id/CardViewDetail"
                android:layout_marginTop="300dp"
                android:clipToOutline="true"
                android:elevation="4dp"
                android:translationZ="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/box_detail_product_payment"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_below="@+id/mangaDetailTitle"
                        android:id="@+id/Product_Card_View"
                        android:layout_centerHorizontal="true"
                        android:layout_width="80dp"
                        android:elevation="4dp"
                        android:translationZ="20dp"
                        android:layout_margin="20dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="8dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mangaDetailImg"
                            android:src="@drawable/booktest_detail"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/NameProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="14dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/patrickhandsc"
                            android:text="one piece"
                            android:textAppearance="@style/Name_Product_Payment"
                            />
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:paddingEnd="10dp"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:text="Price :"
                                android:fontFamily="@font/strait"
                                android:textColor="#80000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/Total_Price"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:text="37$"
                                android:fontFamily="@font/strait"
                                android:textColor="#80000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_below="@+id/CardViewDetail"
                android:layout_centerHorizontal="true"
                android:id="@+id/btnPayMoMo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_login123"
                android:fontFamily="@font/interextrabold"
                android:text="Pay by Momo"
                android:backgroundTint="#8895D9"
                android:layout_marginTop="50dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnPayMoMo"
                android:id="@+id/backToDetail"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_cancel_payment"
                android:fontFamily="@font/interextrabold"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#8895D9"
                android:textSize="20sp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>