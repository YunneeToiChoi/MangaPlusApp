<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.EditProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/ToolBarCP"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="fitCenter"
                android:src="@drawable/createpassbackground"
                android:layout_centerHorizontal="true">
            </ImageView>
            <ImageButton
                android:id="@+id/backEditProfileBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:src="@drawable/ic_back_black"
                tools:ignore="TouchTargetSizeCheck">
            </ImageButton>
            <RelativeLayout
                android:id="@+id/userInputInfo_layout"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="280dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/backEditProfileBtn">
                <RelativeLayout
                    android:id="@+id/InputUserNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/TextUN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/userName"
                        android:fontFamily="@font/stylishregular"
                        android:textAppearance="@style/textview_createaccount">
                    </TextView>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/EditUserName_act"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/TextUN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        app:endIconMode="clear_text"
                        android:layout_marginBottom="20dp"
                        android:textColorHint="@color/gray">
                        <EditText
                            android:id="@+id/userNewNameTxt"
                            android:drawableStart="@drawable/ic_personal"
                            android:drawablePadding="10dp"
                            android:layout_width="match_parent"
                            android:hint="@string/userName"
                            android:fontFamily="@font/inter"
                            android:background="@drawable/input_grayblur"
                            android:layout_height="wrap_content">
                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmitInfo"
                    android:layout_below="@+id/InputUserNameEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_accept"
                    android:fontFamily="@font/interextrabold"
                    android:text="@string/Finish"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginBottom="30dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>